<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/editeV"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/editeV"
        android:inputType="numberDecimal"
        android:onClick="clearfield" />

    <EditText
        android:id="@+id/editwn"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editeV"
        android:ems="10"
        android:onClick="clearfield"
        android:inputType="numberDecimal"
        android:hint="@string/editwn" />

    <EditText
        android:id="@+id/editnm"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editwn"
        android:ems="10"
        android:onClick="clearfield"
        android:inputType="numberDecimal"
        android:hint="@string/editnm" />

    <EditText
        android:id="@+id/editJ"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editnm"
        android:ems="10"
        android:hint="@string/editJ"
        android:onClick="clearfield" />

    <EditText
        android:id="@+id/editK"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editJ"
        android:ems="10"
        android:onClick="clearfield"
        android:inputType="numberDecimal"
        android:hint="@string/editK" />

    <EditText
        android:id="@+id/edithz"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editK"
        android:ems="10"
        android:hint="@string/edithz"
        android:onClick="clearfield" />

    <EditText
        android:id="@+id/editry"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edithz"
        android:ems="10"
        android:onClick="clearfield"
        android:inputType="numberDecimal"
        android:hint="@string/editry" />

    <TextView
        android:id="@+id/viewry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editry"
        android:layout_alignBottom="@+id/editry"
        android:layout_alignLeft="@+id/viewnm"
        android:text="@string/viewry" />

    <TextView
        android:id="@+id/viewhz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edithz"
        android:layout_alignBottom="@+id/edithz"
        android:layout_alignLeft="@+id/viewnm"
        android:text="@string/viewhz" />

    <TextView
        android:id="@+id/viewnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editnm"
        android:layout_alignBottom="@+id/editnm"
        android:layout_alignLeft="@+id/viewwn"
        android:text="@string/viewnm" />

    <TextView
        android:id="@+id/viewwn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editwn"
        android:layout_alignBottom="@+id/editwn"
        android:layout_alignLeft="@+id/vieweV"
        android:text="@string/viewwn" />

    <TextView
        android:id="@+id/viewK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editK"
        android:layout_alignBottom="@+id/editK"
        android:layout_alignLeft="@+id/viewwn"
        android:text="@string/viewK" />

    <TextView
        android:id="@+id/viewJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/viewJ"
        android:layout_alignBaseline="@+id/editJ"
        android:layout_alignBottom="@+id/editJ"
        android:layout_alignLeft="@+id/viewnm"
        android:layout_alignStart="@+id/viewnm" />

    <TextView
        android:id="@+id/vieweV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vieweV"
        android:layout_alignBaseline="@+id/editeV"
        android:layout_alignBottom="@+id/editeV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <Button
        android:id="@+id/convBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="convert"
        android:text="@string/convBtn"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/editry"
        android:layout_alignRight="@+id/editry"
        android:layout_alignEnd="@+id/editry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="reset"
        android:text="@string/resetBtn"
        android:layout_below="@+id/convBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/convBtn"
        android:layout_alignEnd="@+id/convBtn" />

    <Button
        android:id="@+id/decBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="dec"
        android:text="@string/decBtn"
        android:layout_alignTop="@+id/incBtn"
        android:layout_toLeftOf="@+id/incBtn"
        android:layout_toStartOf="@+id/incBtn" />

    <EditText
        android:id="@+id/editinc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/editinc"
        android:inputType="numberDecimal"
        android:onClick="clearfield"
        android:layout_alignTop="@+id/decBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/incBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="inc"
        android:text="@string/incBtn"
        android:layout_below="@+id/resetBtn"
        android:layout_alignRight="@+id/resetBtn"
        android:layout_alignEnd="@+id/resetBtn" />

</RelativeLayout>